
<section id="intro" class="d-flex flex-column justify-content-center align-items-center" style=";">
  <img class="my-5 mb-lg-0" src="/assets/koreatech_logo.png" style="height:250px; width:inherit">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-row">
      <div class="form-group col-md-12">
        <%= f.label :email, class:'col-form-label' %>
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "kotechmall" %>
      </div>
      <div class="form-group col-md-12">
        <%= f.label :password, class:'col-form-label' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class:'form-control', placeholder:"********" %>
      </div>
      <div class="form-group col-md-12 mb-5">
        <%= f.label :password_confirmation, class:'col-form-label'%><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control', placeholder:"********" %>
      </div>
    </div>
    
    <div class="actions mb-2">
      <%= f.submit "Sign up", class:'btn btn-primary btn-lg btn-block', value:"시작" %>
    </div>
    <button type="button" class="btn btn-lg btn-block" onclick="location.href='/users/sign_in'">돌아가기</button>
    
    
    <% end %>
  <!-- <%= render "devise/shared/links" %> -->
</section>




